
@{
    ViewData["Title"] = "Configuracion de platillos";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Ag usu</h1>

<form>
    <div class="form-group">
        <label for="exampleFormControlInput1">Email address</label>
        <input id="txt_Nombre_CRUsu" type="text" class="form-control" id="exampleFormControlInput1" placeholder="Nombre...">
    </div>
    <div class="form-group">
        <label for="exampleFormControlInput1">Email address</label>
        <input id="txt_Correo_CRUsu" type="email" class="form-control" id="exampleFormControlInput1" placeholder="name@example.com">
    </div>
    <div class="form-group">
        <label for="exampleFormControlSelect1">Example select</label>
        <select id="txt_Rol_CRUsu" class="form-control" id="exampleFormControlSelect1">
            <option>Administrador</option>
            <option>Supervisor</option>
            <option>Empleado</option>
        </select>
    </div>
    <button type="button" class="btn btn-primary rounded-button" onclick="AgregarUsuario()">Agregar</button>


</form>

<!--Modal alerta-->
<div class="modal fade" id="ModalAlerta_CRUsu" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered modal-sm">
        <div class="modal-content">
            <div class="modal-header">
            </div>
            <div class="modal-body">
                <div class="row">
                    <div class="col-sm-12 text-center">
                        <i class="fa-solid fa-triangle-exclamation fa-bounce fa-2xl" style="color: #ff0000;"></i>
                        <br />
                        <label id="lbl_Alerta_CRUsu"></label>
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary rounded-button" data-bs-dismiss="modal">Cerrar</button>
            </div>
        </div>
    </div>
</div>

<!--Modal info-->
<div class="modal fade" id="ModalInfo_CRUsu" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered modal-sm">
        <div class="modal-content">
            <div class="modal-header">
            </div>
            <div class="modal-body">
                <div class="row">
                    <div class="col-sm-12 text-center">
                        <i class="fa-solid fa-circle-info fa-bounce fa-2xl" style="color: #005eff;"></i>
                        <br />
                        <label id="lbl_Info_CRUsu"></label>
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary rounded-button" data-bs-dismiss="modal">Cerrar</button>
            </div>
        </div>
    </div>
</div>



