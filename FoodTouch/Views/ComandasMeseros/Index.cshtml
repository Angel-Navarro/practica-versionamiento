                        </div>
                        <div class="col-sm-6">
                            <label>Total</label>
                            <input id="txt_PrecioTotMod_ComMes" class="form-control" readonly>
                        </div>
                    </div>

                    <div class="row mt-3">
                        <div class="col-sm-12">
                            <label>Notas</label>
                            <textarea id="txt_NotasMod_ComMes" rows="3" class="form-control" placeholder="Notas especiales..."></textarea>
                        </div>
                    </div>
                </div>

