@using Microsoft.AspNetCore.Identity;

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - FoodTouch</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/FoodTouch.styles.css" asp-append-version="true" />
    
    <!--Iconos-->
    <script src="https://kit.fontawesome.com/2fd73349bb.js" crossorigin="anonymous"></script>
    <!--Axios-->
    <script src="https://cdn.jsdelivr.net/npm/axios/dist/axios.min.js"></script>

    <!--Globales-->
    <link rel="stylesheet" href="../css/Globales.css">

    <!--Declarar variables globales que necesita JS-->
    <script>
        //const urlServer = "https://@Globales.GlobalVariables.server";


        const urlServer = "@Globales.GlobalVariables.server";
    </script>

</head>
<body class="d-flex flex-column min-vh-100">
    <header>

        <!--Barra de navegacion-->
        <nav class="navbar fixed-top navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">FoodTouch</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">Menú</a>
                        </li>

                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Ubicacion">Ubicación</a>
                        </li>

                        @if(User.IsInRole("Administrador") || User.IsInRole("Supervisor"))
                        {
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-area="" asp-controller="CatPlatillos" asp-action="Index">Configuracion de platillos</a>
                            </li>
                        }
                        @if (User.IsInRole("Administrador") || User.IsInRole("Supervisor"))
                        {
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-area="" asp-controller="CatUsuarios" asp-action="Index">Configuracion de Usuarios</a>
                            </li>
                        }
                        @if (User.IsInRole("Administrador") || User.IsInRole("Cocinero"))
                        {
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-area="" asp-controller="ComandasCocina" asp-action="Index">Comandas cocina</a>
                            </li>
                        }
                        @if (User.IsInRole("Administrador") || User.IsInRole("Mesero"))
                        {
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-area="" asp-controller="ComandasMeseros" asp-action="Index">Comandas mesero</a>
                            </li>
                        }


                        <!---->
                        @if (User.Identity.IsAuthenticated)
                        {
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-area="" asp-controller="Acceso" asp-action="Salir"><i class="fa-solid fa-right-to-bracket"></i></a>
                            </li>
                        }
                        else{
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-area="" asp-controller="Acceso" asp-action="Index"><i class="fa-solid fa-user"></i></a>
                            </li>
                        }

@*                         <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
                        </li> *@
                    </ul>
                </div>
            </div>
        </nav>
    </header>

@*     <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div> *@

    <!-- CONTENIDO PRINCIPAL -->
    <main class="flex-fill pt-5 pb-5">
        <div class="container pt-3 pb-4">
            @RenderBody()
        </div>
    </main>


@*     <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2025 - FoodTouch - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
            <small>Versión de la aplicación: @ViewBag.AppVersion</small>
        </div>

    </footer> *@

    <!-- FOOTER QUE SIEMPRE SE QUEDA HASTA ABAJO -->
    <footer class="border-top footer text-muted">
        <div class="container d-flex justify-content-between align-items-center py-3">
            <div>
                &copy; 2025 - FoodTouch - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
            </div>
            <div>
                <small>Versión: @ViewBag.AppVersion</small>
            </div>
        </div>
    </footer>


    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
